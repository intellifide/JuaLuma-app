rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Check if user has a specific role (assuming role is stored in users collection)
    // trusted environments (server backend) bypass these rules if using Admin SDK
    function hasRole(role) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isSupportAgent() {
      return hasRole('support_agent');
    }
    
    function isDeveloper() {
      return hasRole('developer'); // or check if developer_payout_id exists if role isn't explicit
    }

    // Users Collection
    // Users can read/write their own data
    // Support agents can read user data (Note: Firestore Rules cannot filter fields, so this grants full document read)
    match /users/{userId} {
      allow read: if isOwner(userId) || isSupportAgent();
      allow write: if isOwner(userId);
    }

    // Support Tickets Collection (Assumed structure based on context)
    // Users can read/create/update their own tickets
    // Support agents can read/update any ticket
    match /support_tickets/{ticketId} {
      allow read: if isAuthenticated() && (resource.data.user_id == request.auth.uid || isSupportAgent());
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isAuthenticated() && (resource.data.user_id == request.auth.uid || isSupportAgent());
    }

    // Widget Engagement Collection
    // Developers can read engagement data
    match /widget_engagement/{docId} {
      allow read: if isDeveloper();
      // Write permissions likely handled by backend or specific events, mostly readonly for frontend/devs directly?
      // Assuming backend handles writes, or maybe strictly for metrics
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
