                {
                    "name": "Signup",
                    "event": [
                        {
                            "listen": "prerequest",
                            "script": {
                                "exec": [
                                    "pm.environment.set(\"current_email\", \"test-user-\" + Date.now() + \"@example.com\");"
                                ],
                                "type": "text/javascript"
                            }
                        },
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.uid) {",
                                    "    pm.environment.set(\"test_uid\", jsonData.uid);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"{{current_email}}\",\n    \"password\": \"{{test_user_password}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/signup",
                            "host": [
                                "{{base_url}}"
                            ],
